#-----------------------weak seg------------------------

layer {
  bottom: "conv5_3"
  top: "fc8_seg"
  name: "fc8_seg"
  type: "Convolution"
  param {
    lr_mult: 1
    decay_mult: 1
  }
  param {
    lr_mult: 2
    decay_mult: 1
  }
  convolution_param {
    num_output: 2
    kernel_size: 1
    weight_filler {
      type: "gaussian"
      std: 0.01
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}

#-----------------------classification------------------------

layer {
	bottom: "conv5_3"
	top: "fc6" # unmodded
	name: "fc6" # unmodded
	param {
		lr_mult: 1.0
	}
	param {
		lr_mult: 2.0
	}
	type: "InnerProduct"
	inner_product_param {
		num_output: 4096
		weight_filler {
			type: "gaussian"
			std: 0.01
		}
		bias_filler {
			type: "constant"
			value: 0
		}
	}
}

layer {
	bottom: "fc6" # unmodded
	top: "fc6" # unmodded
	name: "relu6"
	type: "ReLU"
}

layer {
	bottom: "fc6" # unmodded
	top: "fc7" # unmodded
	name: "fc7" # unmodded
	param {
		lr_mult: 1.0
	}
	param {
		lr_mult: 2.0
	}
	type: "InnerProduct"
	inner_product_param {
		num_output: 4096
		weight_filler {
			type: "gaussian"
			std: 0.01
		}
		bias_filler {
			type: "constant"
			value: 0
		}
	}
}

layer {
	bottom: "fc7" # unmodded
	top: "fc7" # unmodded
	name: "relu7"
	type: "ReLU"
}

layer {
name: "drop1"
type: "Dropout"
bottom: "fc7"
top: "fc7"
    dropout_param {
        dropout_ratio: 0.3
    }
}

layer {
	bottom: "fc7" # unmodded
	top: "cls_score_res"
	name: "cls_score_res"
	param {
		lr_mult: 1.0
	}
	param {
		lr_mult: 2.0
	}
	type: "InnerProduct"
	inner_product_param {
		num_output: 2
		weight_filler {
			type: "gaussian"
			std: 0.01
		}
		bias_filler {
			type: "constant"
			value: 0
		}
	}
}

layer {
   bottom: "feat_scores"
   top: "feat_scores_reshape"
   name: "feat_scores_reshape"
   type: "Reshape"
   reshape_param{
	   shape {
			dim: 0
			dim: 2

		}
	}
}


layer {
  name: "cls_score"
  type: "Eltwise"
  bottom: "feat_scores_reshape"
  bottom: "cls_score_res"
  top: "cls_score"
  eltwise_param { operation: SUM }
}

#-----------------------output------------------------

layer {
	name: "loss_fusion"
	top: "loss_fusion"
	type: "SoftmaxWithLoss"
	bottom: "cls_score"
	bottom: "labels"
	loss_weight: 0
}

layer {
	name: "loss_cls"
	top: "loss_cls"
	type: "SoftmaxWithLoss"
	bottom: "cls_score_res"
	bottom: "labels"
    bottom: "labels_weights"	
	loss_weight: 1
}

layer {
  name: "loss_seg"
  type: "SoftmaxWithLoss"
  bottom: "fc8_seg"
  bottom: "seg_label"
  bottom: "seg_weights"
  top: "loss_seg"
  loss_weight: 1
  loss_param {
    ignore_label: 255
  }
}

layer {
   name: "cls_score_sm"
   type: "Softmax"
   bottom: "cls_score"
   top: "cls_score_sm"
}

layer {
   name: "cls_score_sm2"
   type: "Softmax"
   bottom: "cls_score_res"
   top: "cls_score_sm2"
}

layer {
   name: "seg_softmax"
   type: "Softmax"
   bottom: "fc8_seg"
   top: "seg_softmax"
}

layer {
   name: "gen_silence"
   type: "Silence"
   bottom: "cls_score_sm"
   bottom: "seg_softmax"
   bottom: "cls_score_sm2"
}

